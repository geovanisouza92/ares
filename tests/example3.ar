module Clientes

  class Base
    attr _id: Integer ;
  end

  # interface IPessoa
  #   def TemBoaReputacao? : Boolean;
  # end

  class Pessoa > Base # , IPessoa
    def TemBoaReputacao?() : Boolean
    begin
        # Retorna verdadeiro somente se a pessoa for de boa fé...
        Result = not Nome.IsEmpty?;
    end
    attr Nome: String ;
  end

  class PessoaFisica > Pessoa
    attr CPF: String ;
  end

  class PessoaJuridica
      > Pessoa
    attr CNPJ: String ;
  end

# inline beginc "Lista tobegins os clientes ativos no sistema";
  def ListarTobeginsOsClientes(): Array
  begin
    Result = (from Cliente in DBO.Clientes
               where Cliente.TemBoaReputacao?);
  end

end
