# Set the name of the project here
PROJECT_NAME := ares
PROJ_VERSION := 0.3
 
# Set this variable to the top of the LLVM source tree.
LLVM_SRC_ROOT = @LLVM_SRC@

# Set this variable to the top level directory where LLVM was built
# (this is *not* the same as OBJ_ROOT as defined in LLVM's Makefile.config).
LLVM_OBJ_ROOT = @LLVM_OBJ@

# Set the directory root of this project's source files
PROJ_SRC_ROOT := $(subst //,/,@abs_top_srcdir@)

# Set the root directory of this project's object files
PROJ_OBJ_ROOT := $(subst //,/,@abs_top_objdir@)

# Set the root directory of this s'project install prefix
PROJ_INSTALL_ROOT := @prefix@

LDFLAGS += -L/home/geovani/dev/boost/bin.v2/libs/program_options/build/gcc-4.6.1/release/link-static/threading-multi
LDFLAGS += -L/home/geovani/dev/boost/bin.v2/libs/system/build/gcc-4.6.1/release/link-static/threading-multi
LDFLAGS += -L/home/geovani/dev/boost/bin.v2/libs/filesystem/build/gcc-4.6.1/release/link-static/threading-multi

LINK_COMPONENTS = all

# Include LLVM's Master Makefile.
include $(LLVM_SRC_ROOT)/Makefile.common

# CPPFLAGS += -std=c++0x
CPPFLAGS += -fexceptions -frtti
CXX = clang++ -w

LIBS += -lboost_filesystem
LIBS += -lboost_program_options
LIBS += -lboost_system
